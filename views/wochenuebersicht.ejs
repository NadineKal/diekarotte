<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"> 
        <link href="css/stylesheet.css" rel="stylesheet">
        <link href="css/rightside.css" rel="stylesheet">
        <title>Mensaplan</title>
    </head>
    <body>
        <header>
            <div class="nav-absolute">
                <a class="brand-left" href="/">
                    <img src="img/logo.png" width="50" height="50" alt="Die Karotte">
                </a>
                <ul>
                    <li><a href="/plaene">Pl√§ne</a></li>
                    <li><a href="/vorschlage">Vorschlag</a></li>
                    <li><a href="/ranking">Ranking</a></li>
                </ul>
            </div>
                <a class="login-right" href="/login">
                    <img src="img/login.jpg" width="50" height="50" alt="Login-Button">
                </a>
        </header>
        <main>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 left-h">
                        <div class="col-lg-10 mx-auto">
                            <div class="space">
                                <table class="table">
                                    <thead>
                                      <tr>
                                        <th scope="col"></th>
                                        <th scope="col">Gericht1</th>
                                        <th scope="col">Gericht2</th>
                                        <th scope="col">Gericht3</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr>
                                        <th scope="row">Montag</th>
                                        <% for(var i=0;i<all.length;i++){%>
                                          <% if(all[i].tag==="Montag"){%>
                                            <th scope="row"><%= all[i].gericht%></th>
                                          <% }%>
                                        <% }%>
                                      </tr>
                                      <tr>
                                        <th scope="row">Dienstag</th>
                                        <% for(var i=0;i<all.length;i++){%>
                                          <% if(all[i].tag==="Dienstag"){%>
                                            <th scope="row"><%= all[i].gericht%></th>
                                          <% }%>
                                        <% }%>
                                      </tr>
                                      <tr>
                                        <th scope="row">Mittwoch</th>
                                        <% for(var i=0;i<all.length;i++){%>
                                          <% if(all[i].tag==="Mittwoch"){%>
                                            <th scope="row"><%= all[i].gericht%></th>
                                          <% }%>
                                        <% }%>
                                      </tr>
                                      <tr>
                                        <th scope="row">Donnerstag</th>
                                        <% for(var i=0;i<all.length;i++){%>
                                          <% if(all[i].tag==="Donnerstag"){%>
                                            <th scope="row"><%= all[i].gericht%></th>
                                          <% }%>
                                        <% }%>
                                      </tr>
                                      <tr>
                                        <th scope="row">Freitag</th>
                                        <% for(var i=0;i<all.length;i++){%>
                                          <% if(all[i].tag==="Freitag"){%>
                                            <th scope="row"><%= all[i].gericht%></th>
                                          <% }%>
                                        <% }%>
                                      </tr>
                                    </tbody>
                                  </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 right-h p-0">
                        <div class="right-side"></div>
                    </div>
                </div>
            </div>
        </main>
        </div>
        <footer>
            <ul>
                <li><a href="/impressum">Impressum</a></li>
                <li><a href="/datenschutz">Datenschutz</a></li>
            </ul>
        </footer>
        <div class="container"></div>

        <script src="js/jquery-3.3.1.min.js"></script>
        <script src="js/popper.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
    </body>
</html>